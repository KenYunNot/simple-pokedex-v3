generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Pokemon {
  id         Int            @id
  name       String
  types      String[]
  abilities  String[]
  height     Int
  weight     Int
  image_url  String?
  hp         Int
  attack     Int
  defense    Int
  sp_attack  Int
  sp_defense Int
  speed      Int
  species_id Int
  species    PokemonSpecies @relation(fields: [species_id], references: [id])
}

model PokemonSpecies {
  id          Int       @id
  name        String
  genus       String
  gender_rate Int
  pokemon     Pokemon[]
}
